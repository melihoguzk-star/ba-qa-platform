[flake8]
# Flake8 configuration for BA-QA Platform

# Maximum line length
max-line-length = 127

# Maximum complexity
max-complexity = 10

# Exclude directories
exclude =
    .git,
    __pycache__,
    venv,
    .venv,
    env,
    .env,
    htmlcov,
    .pytest_cache,
    .mypy_cache,
    build,
    dist,
    *.egg-info,
    .tox

# Ignore specific errors
ignore =
    # E203: whitespace before ':' (conflicts with black)
    E203,
    # W503: line break before binary operator (conflicts with black)
    W503,
    # E501: line too long (handled by black)
    E501

# Error codes to always check
select = E,W,F,C

# Per-file ignores
per-file-ignores =
    __init__.py:F401
    tests/*:F401,F811

# Show source code for each error
show-source = True

# Show statistics
statistics = True

# Count errors
count = True
